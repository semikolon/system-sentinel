{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sentinel-ui",
  "version": "0.1.0",
  "identifier": "com.fredrikbranstrom.sentinel-ui",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "System Sentinel",
        "width": 380,
        "height": 750,
        "minWidth": 340,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}